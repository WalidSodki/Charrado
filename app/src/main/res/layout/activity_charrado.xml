<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="walidsodki.com.charrado.CharradoActivity">

    <TextView
        android:id="@+id/secondsText"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text=""
        />

    <TextView
        android:id="@+id/wordText"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Press Play!"
        android:textSize="50sp" />

    <Button
        android:id="@+id/correctButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="20dp"
        android:text="Correct"
        android:background="#77dd77"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize= "25sp"
        android:onClick="correctButton"
        />

    <Button
        android:id="@+id/passButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/correctButton"
        android:layout_alignBottom="@+id/correctButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="Pass"
        android:background="#ff6961"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:onClick="passButton"

        />

    <Button
        android:id="@+id/playButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBaseline="@+id/correctButton"
        android:layout_alignBottom="@+id/correctButton"
        android:layout_centerHorizontal="true"
        android:onClick="startGame"
        android:text="PLAY"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="20dp"
        android:background="#54bbb5"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/highscoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/passButton"
        android:layout_alignTop="@+id/secondsText"
        android:text="High score: 0"
        android:textSize="25sp"/>

</RelativeLayout>
